@model Proyecto.Models.Proyecto
@{
    ViewBag.Title = "Create";
}
<head>
    <style>
        .card{
        
        background-color: lightgreen;
          width: 70rem;
           }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="  container-fluid text-center">
        <h2>Agregar Proyecto</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table class="d-flex justify-content-center">
            <tbody>
                <tr style="line-height:50px">
                    <th>
                        Nombre Proyecto<a style="color:red"> *</a>
                    </th>

                    <td required="true">
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr style="line-height:50px">
                    <th>
                        Objetivo<a style="color:red"> *</a>
                    </th>

                    <td required="true">
                        @Html.TextAreaFor(model => model.objetivo, new { htmlAttributes = new { @class = "form-control ", required = "required" }, style = "width: 300px; height: 10em" })
                        @Html.ValidationMessageFor(model => model.objetivo, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr style="line-height:50px">
                    <th>
                        Fecha de inicio<a style="color:red"> *</a>
                    </th>
                    <td required="true">
                        @Html.EditorFor(model => model.fechaInicio, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.fechaInicio, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr style="line-height:50px">
                    <th>
                        Nombre de Cliente<a style="color:red"> *</a>
                    </th>

                    <td>
                        @Html.DropDownList("cedulaCliente", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.cedulaCliente, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr style="line-height:50px">
                    <th>
                        Nombre de Lider<a style="color:red"> *</a>
                    </th>

                    <td>
                        @Html.DropDownList("lider", ((Proyecto.Controllers.ProyectoController)this.ViewContext.Controller).getEmpledos(), htmlAttributes: new { @class = "form-control", @required = "required" })

                    </td>
                </tr>
                <tr style="line-height:50px">
                    <th>
                        Duración Estimada
                    </th>

                    <td>
                        @Html.EditorFor(model => model.duracionEstimada, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.duracionEstimada, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr style="line-height:50px">
                    <th>
                        Costo de Trabajo
                    </th>

                    <td>
                        @Html.EditorFor(model => model.costoTrabajo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.costoTrabajo, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr style="line-height:50px">
                    <th>
                        Costo Estimado
                    </th>
                    <td>
                        @Html.EditorFor(model => model.costoEstimado, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.costoEstimado, "", new { @class = "text-danger" })
                    </td>
                </tr>


                <tr style="line-height:50px">
                    <th>
                        Fecha de Finalización<a>  </a>
                    </th>

                    <td>
                        @Html.EditorFor(model => model.fechaFinalizacion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fechaFinalizacion, "", new { @class = "text-danger" })
                    </td>
                </tr>


            </tbody>
        </table>

        <div class="botones text-center">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-success" />
                <a href="~/Proyecto" class="btn btn-default">
                    Cancelar
                </a>
            </div>
        </div>

    </div>
  
   
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>