@model Proyecto.Models.Autenticar
<head>
<script type="text/javascript" language="javascript">
    function desa() {
        window.menubar.visible = false;
        window.toolbar.visible = false;
    }
    
    
</script>
    <style>

        body {
            background-image: url('../../Content/images/fondo.png');
            position: absolute;
            z-index: 1;
            width: 100%;
            height: 100%;
        }
        p {
            font: oblique 600%;
            color: white;
            font-size: 150%;
        }
    </style>
</head>
<body onload="desa();" >
    @{

        ViewBag.Title = "Index";
    }

    @{
        Layout = null;
    }


    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/nav.css" />

    <input type="hidden" id="hidIsCommitted" runat="server" />
    <div class="sidenav">
        <div class="login-main-text text-center" font color="white">
            <h2>Software Expert S.A<br> Pagina de Inicio</h2>
        </div>
    </div>

    <div class="main align-content-center">
        <div class="col-md-6 col-sm-12">

            <div class="row">
                <div class="col-md-6 form-horizontal align-content-center">
                    <form action="/Autenticar/Index" method="post">
                        <br />
                        <p>Cedula: </p>
                        <input type="text" class="form-control" name="cedula" placeholder="Cédula" required autofocus>
                        <br />
                        <p>Contraseña: </p>
                        <input type="password" class="form-control" name="password" placeholder="Contraseña" required>
                        <br />
                        <button class="btn btn-black" type="submit">
                            Iniciar sesión
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    <meta http-equiv="Expires" content="0" />
    <meta http-equiv="Pragma" content="no-cache" />

    <script type="text/javascript">
        function desabilitar() {
            window.location.hash = "no-back-button";
            window.location.hash = "Again-No-back-button";//esta linea es necesaria para chrome
            window.onhashchange = function () { window.location.hash = "no-back-button"; }
        }
    </script>

</body>