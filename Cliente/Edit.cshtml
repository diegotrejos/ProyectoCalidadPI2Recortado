@model Proyecto.Models.Cliente

@{
    ViewBag.Title = "Edit";
}

<script>
        $(document).ready(function () {   
            getProvincia(@Html.DisplayFor(model => model.provincia));
            getCanton(@Html.DisplayFor(model => model.provincia), @Html.DisplayFor(model => model.canton));
            getDistrict(@Html.DisplayFor(model => model.provincia), @Html.DisplayFor(model => model.canton), @Html.DisplayFor(model => model.distrito));
        });
</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="container-fluid text-center">
    <h2>Editar Cliente</h2>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="d-flex justify-content-center">
        <tbody>
            <tr style="line-height:50px">
                <th>
                    Cédula<a style="color:red"> *</a>
                </th>
                <td required="true">
                    @Html.EditorFor(model => model.cedula, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.cedula, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr style="line-height:50px">
                <th>
                    Nombre<a style="color:red"> *</a>
                </th>
                <td required="true">
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr style="line-height:50px">
                <th>
                    Primer Apellido<a style="color:red"> *</a>
                </th>
                <td required="true">
                    @Html.EditorFor(model => model.apellido1, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.apellido1, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr style="line-height:50px">
                <th>
                    Segundo Apellido
                </th>
                <td>
                    @Html.EditorFor(model => model.apellido2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.apellido2, "", new { @class = "text-danger" })
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Teléfono
                </th>
                <td>
                    @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Provincia
                </th>
                <td>
                    @Html.DropDownListFor(model => model.provincia, Enumerable.Empty<SelectListItem>(), "--Provincia--", new { @class = "form-control", onchange = "getCanton(null, null)" })
                    @Html.ValidationMessageFor(model => model.provincia, "", new { @class = "text-danger" })
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Cantón
                </th>
                <td>
                    @Html.DropDownListFor(model => model.canton, Enumerable.Empty<SelectListItem>(), "--Cantón--", new { @class = "form-control", onchange = "getDistrict(null, null, null)" })
                    @Html.ValidationMessageFor(model => model.canton, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr style="line-height:50px">
                <th>
                    Distrito
                </th>
                <td>
                    @Html.DropDownListFor(model => model.distrito, Enumerable.Empty<SelectListItem>(), "--Distrito--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.distrito, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr style="line-height:50px">
                <th>
                    Dirección Exacta
                </th>
                <td>
                    @Html.TextAreaFor(model => model.direccionExacta, new { htmlAttributes = new { @class = "form-control" }, style = "width: 200px; height: 10em" })
                    @Html.ValidationMessageFor(model => model.direccionExacta, "", new { @class = "text-danger" })
                </td>
            </tr>
        </tbody>
    </table>

</div>



    <div class="botones text-center">
        <input type="submit" value="Aceptar" class="btn btn-success"  style="margin: 20px"/>
        <a href="~/Cliente/Index" class="btn btn-default">
            Cancelar
        </a>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
